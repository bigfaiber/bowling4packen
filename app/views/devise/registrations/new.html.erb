<body class = 'fondo'>
<style>
    .required:after { content:" *"; color:red }
</style>

  <div class = 'container mt-5 bg-info col-md-3 container-form'>
  <h2>Sign up</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.text_field :name, autofocus: true, required:  true, placeholder: 'Add name', autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, required:  true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password,  required:  true, placeholder: '6 chars minimum', autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, required:  true, autocomplete: "new-password" %>
    </div>



    <div class="actions text-center">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
  <br/>
  </div>
</body>